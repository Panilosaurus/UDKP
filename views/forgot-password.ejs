<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>SB Admin 2 - Forgot Password</title>
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <style>
        .card.o-hidden {
            border-radius: .75rem;
            overflow: hidden
        }

        .fp-left {
            min-height: 440px
        }

        .logo-fp {
            width: 80%;
            max-width: 360px;
            height: auto;
            display: block
        }

        @media (min-width:1200px) {
            .logo-fp {
                max-width: 420px
            }

            .fp-left {
                min-height: 500px
            }
        }

        @media (max-width:991.98px) {
            .fp-left {
                display: none !important
            }
        }

        .btn-user {
            border-radius: 30px
        }
    </style>
</head>

<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <!-- LEFT -->
                            <div class="col-lg-5 fp-left d-flex align-items-center justify-content-center bg-white">
                                <img src="/img/logo-bkn.jpg" alt="Logo instansi" class="logo-fp img-fluid">
                            </div>

                            <!-- RIGHT -->
                            <div class="col-lg-7">
                                <div class="p-5">
                                    <div class="text-center d-lg-none mb-4">
                                        <img src="img/logo-bkn.png" alt="Logo" style="height:64px">
                                    </div>

                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Forgot Your Password?</h1>
                                        <p id="stepText" class="mb-4">Masukkan alamat email Anda untuk menerima OTP.</p>
                                    </div>

                                    <form class="user" id="forgotForm" action="/forgot-password" method="POST">
                                        <!-- Email -->
                                        <div class="form-group">
                                            <input type="email" name="email" class="form-control form-control-user" placeholder="Enter Email Address..."
                                                required>
                                        </div>
                                    
                                        <!-- Tombol Kirim OTP -->
                                        <button type="submit" name="action" value="sendOtp" class="btn btn-info btn-user btn-block">
                                            Kirim OTP
                                        </button>
                                    
                                        <!-- OTP -->
                                        <div class="form-group mt-3">
                                            <input type="text" name="otp" class="form-control form-control-user" placeholder="Masukkan OTP" maxlength="6">
                                        </div>
                                    
                                        <!-- Password baru -->
                                        <div class="form-group">
                                            <input type="password" name="password" class="form-control form-control-user" placeholder="Password Baru">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="confirmPassword" class="form-control form-control-user"
                                                placeholder="Ulangi Password Baru">
                                        </div>
                                    
                                        <!-- Verifikasi & Reset -->
                                        <button type="submit" name="action" value="verifyOtp" class="btn btn-primary btn-user btn-block">
                                            Verifikasi & Reset Password
                                        </button>
                                    </form>


                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="/register">Create an Account!</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/login">Already have an account? Login!</a>
                                    </div>
                                </div>
                            </div>
                            <!-- END RIGHT -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="js/sb-admin-2.min.js"></script>

    <script>
        const stepEmail = document.getElementById("stepEmail");
        const stepOtp = document.getElementById("stepOtp");
        const stepPassword = document.getElementById("stepPassword");
        const stepText = document.getElementById("stepText");

        // Simulasi kirim OTP
        document.getElementById("btnSendOtp").addEventListener("click", function () {
            if (!document.getElementById("email").value) {
                alert("Masukkan email terlebih dahulu!");
                return;
            }
            stepEmail.style.display = "none";
            stepOtp.style.display = "block";
            stepText.innerText = "Masukkan OTP yang dikirim ke email Anda.";
        });

        // Simulasi verifikasi OTP
        document.getElementById("btnVerifyOtp").addEventListener("click", function () {
            if (!document.getElementById("otp").value) {
                alert("Masukkan kode OTP!");
                return;
            }
            stepOtp.style.display = "none";
            stepPassword.style.display = "block";
            stepText.innerText = "Masukkan password baru Anda.";
        });

        // Simulasi reset password
        document.getElementById("btnResetPass").addEventListener("click", function () {
            const pass = document.getElementById("password").value;
            const confirm = document.getElementById("confirmPassword").value;
            if (pass !== confirm) {
                alert("Password tidak sama!");
                return;
            }
            alert("Password berhasil direset (demo). Hubungkan dengan backend untuk update DB.");
            window.location.href = "/login";
        });
    </script>
</body>

</html>